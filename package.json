{
  "name": "CastleCrush",
  "version": "1.0.0",
  "description": "My app description",
  "scripts": {
    "build": "npm run build:index & npm run build:html & npm run build:css & npm run build:js",
    "watch": "npm run watch:html & npm run watch:css & npm run watch:js",
    "build:index": "pug index.pug -o dist",
    "build:html": "pug templates -o dist/templates",
    "watch:html": "watch \"npm run build:html\" templates/",
    "build:css": "lessc less/style.less dist/css/style.css",
    "watch:css": "watch \"npm run build:css\" less/",
    "build:js": "babel js -d dist/js",
    "watch:js": "watch \"npm run build:js\" js/"
  },
  "devDependencies": {
    "babel-cli": "^6.24.1",
    "babel-preset-env": "^1.6.0",
    "less": "^2.7.2",
    "pug-cli": "^1.0.0-alpha6",
    "watch": "^1.0.2"
  }
}
